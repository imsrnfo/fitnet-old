<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.datasource">java:/MySqlDS</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">false</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.max_fetch_depth">3</property>
        <!--<property name="hbm2ddl.auto">create</property>-->
        <mapping resource="HBMs/Articulo.hbm.xml"/>
        <mapping resource="HBMs/CobroArticulo.hbm.xml"/>
        <mapping resource="HBMs/Usuario.hbm.xml"/>
        <mapping resource="HBMs/Permiso.hbm.xml"/>
        <mapping resource="HBMs/Cliente.hbm.xml"/>
        <mapping resource="HBMs/Gimnasio.hbm.xml"/>
        <mapping resource="HBMs/Cobro.hbm.xml"/>
        <mapping resource="HBMs/Concepto.hbm.xml"/>
        <mapping resource="HBMs/Actividad.hbm.xml"/>
        <mapping resource="HBMs/Movimiento.hbm.xml"/>
        <mapping resource="HBMs/Marca.hbm.xml"/>
        <mapping resource="HBMs/Bitacora.hbm.xml"/>
        <mapping resource="HBMs/PermisoUsuario.hbm.xml"/>
        <mapping resource="HBMs/Excepcion.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
